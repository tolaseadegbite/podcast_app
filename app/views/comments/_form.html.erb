<%= form_with model: [channel, commentable, comment] do |f| %>
    <%= render 'layouts/errors', f: f %>

    <% if !parent.nil? %>
        <%= f.hidden_field :parent_id, value: parent.id %>
    <% end %>

    <div>
        <%= f.text_area :body, placeholder: 'Add a comment', class: "form-control w-100" %>
    </div>

    <div class="text-end">
        <% if !parent.nil? %>
            <%= f.button 'Reply', class: "btn btn-dark mt-2 rounded-5" %>
        <% else %>
            <%= f.button 'Submit', class: "btn btn-dark mt-2 rounded-5" %>
        <% end %>
    </div>
<% end %>